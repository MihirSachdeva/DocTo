<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Doc:To</title>
  <meta name="theme-color" content="rgb(153, 153, 153)">
  <link rel="icon" href="images/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <link href="//db.onlinewebfonts.com/c/75135d5bab4eade37ad4d20803c7ffbd?family=Modern+No.20" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Product+Sans:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i">
  <link href="https://fonts.googleapis.com/css?family=Vidaloka&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/1f242f6e0e.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/styles.css">
  <style media="screen">
    form {
      padding: 20px;
    }

    .sidenav {
      z-index: 1;
    }

    .overlay {
      z-index: 1;
    }
  </style>
</head>

<body>

  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <p>Patients</p>
    <hr width="70%" style="color: #818181; border-bottom: solid 2px #818181;">
    <a href="/Albus"><i class="fas fa-book"></i> Albus Potter</a>
    <a href="/James"><i class="fas fa-book"></i> James Potter</a>
    <a href="/Lily"><i class="fas fa-book"></i> Lily Potter</a>
  </div>

  <div id="myUser" class="overlay">
    <a href="javascript:void(0)" class="closebtnOverlay" onclick="closeOverlayUser()">&times;</a>
    <div class="overlay-content">
      <img src="images/userIcon.png" style="border-radius: 100%; margin: 30px; width: 400px;">
      <p>Dr. Strange Lestrange</p>
      <p>Physician</p>
      <p>MD, MBBS (AIIMS Delhi)</p>
      <p>St. Mungo's Hospital, Diagon Alley</p>
      <a href="#">Logout</a>
    </div>
  </div>



  <div id="page-container">
    <div id="content-wrap">


      <nav class="navbar navbar-lg navbar-light">
        <span data-toggle="tooltip" data-placement="bottom" title="Patients" style="font-size:30px;cursor:pointer; text-shadow: 1px 1px 2px gray;" onclick="openNav()">&#9776</span> <!-- openNav opens the side navbar -->
        <a class="navbar-brand" href="/">Doc:To</a>
        <div class="btn-group" role="group">
          <span data-toggle="tooltip" data-placement="bottom" title="Add prescription" class="nav-link topnav-right btn btn-secondary" style="font-size:30px;cursor:pointer; text-shadow: 1px 1px 2px gray;">
            <a href="/add"><i class="fas fa-plus"></i></a>
          </span>
          <span data-toggle="tooltip" data-placement="bottom" title="Doctor" class="nav-link topnav-right btn btn-secondary" style="font-size:30px;cursor:pointer; text-shadow: 1px 1px 2px gray;" onclick="openOverlayUser()"><i
              class="fas fa-user-nurse"></i></span>
        </div>
      </nav>


      <div id="grad1">
        <div class="container">
          <p id="course-name">Add Prescriptions</p>
          <p id="course-full">Upload prescriptions for a chosen patient.</p>
        </div>
      </div>


      <div class="files-table">
        <div class="container">
          <form action="/add" method="post" enctype="multipart/form-data">
            <select class="custom-select custom-select-lg mb-3" name="patientName">
              <option value="Albus">Albus Potter</option>
              <option value="James">James Potter</option>
              <option value="Lily">Lily Potter</option>
            </select><br><br>
            <div class="custom-file" style="z-index: 0;">
              <input class="custom-file-input" type="file" name="filename">
              <label class="custom-file-label" for="customFile">Choose file</label><br><br>
            </div>
            <input class="btn btn-lg btn-primary" type="submit" value="Upload file">
          </form>
        </div>

      </div>





    </div>
    <div id="footer-wrapper">
      <div class="footer">
        <a target="_blank" class="footer-link" href="https://www.facebook.com/sachdeva.mihir"><i class="fab fa-facebook"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a target="_blank" class="footer-link" href="https://github.com/MihirSachdeva"><i class="fab fa-github"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a target="_blank" class="footer-link" href="https://www.instagram.com/mihirsachdeva_/"><i class="fab fa-instagram"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a target="_blank" class="footer-link" href="https://www.linkedin.com/in/mihirsachdeva/"><i class="fab fa-linkedin"></i></a>
        <p class="copyright">Made with ❤️ by Mihir Sachdeva</p>
      </div>

    </div>
  </div>






  <script type="text/javascript">
    var randomInt = Math.floor(Math.random() * 6);
    var gradients = ["gradient1", "gradient2", "gradient3", "gradient4", "gradient5", "gradient6"]
    var randomGradient = gradients[randomInt];
    $("body").addClass(randomGradient);

    function openNav() {
      document.getElementById("mySidenav").style.width = "26%";
      document.body.style.backgroundColor = "rgba(0,0,0,0.3)";
    }

    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
      document.body.style.backgroundColor = "white";
    }



    function openOverlayUser() {
      document.getElementById("myUser").style.width = "100%";
    }

    function closeOverlayUser() {
      document.getElementById("myUser").style.width = "0%";
    }
  </script>
</body>

</html>
